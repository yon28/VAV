@using Entities;

@model RewardViewModel

@{
	ViewBag.Title = "Index";
	var currentReward = Model;
	if (currentReward == null)
	{
		currentReward = new RewardViewModel();
	}
}

<h2>Details</h2>

<form action="Save" method="post">
	<input name="Id" style="display: none;" value="@currentReward.ID" />

	<div class="form-group">
		<label for="title">Title</label>
		<input name="Title" type="text" class="form-control" id="title" value="@currentReward.Title" />
	</div>
	<div class="form-group">
		<label for="description">Description</label>
		<input name="Description" type="text" class="form-control" id="description" value="@currentReward.Description" />
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-success">Save</button>
		@Html.ActionLink("Cancel", "Index", "Reward", new { }, new { @class = "btn btn-warning" })
	</div>
</form>

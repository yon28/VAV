@using Entities;

@model List<Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Users</h2>
@Html.ActionLink("Add", "Add", "User", new { }, new { @class = "btn btn-primary" })

<table class="table table-bordered" style="margin-top: 50px;">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Birth</th>
            <th>Age</th>
            <th>Rewards</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Birth.ToShortDateString()</td>
            <td>@user.Age</td>
            <td>@user.RewardsToString</td>
            <td>
                @Html.ActionLink("Edit", "Edit", "User", new { UserId = @user.ID }, new { @class = "btn btn-default" })
                @Html.ActionLink("Delete", "Del", "User", new { UserId = @user.ID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
        }
    </tbody>
</table>

